---
layout: base.hbs
---

<!DOCTYPE html>
<html class="no-js">
<head>
  {{> head }}
</head>
<body {{#if bodyClass}}class="{{bodyClass}}"{{/if}}>
  <header class="site-header" role="banner">
    <div class="container">
      <div class="content">
        {{> header }}
      </div>
    </div>
  </header>
  <main class="site-main" role="main">
    <div class="container">
      <div class="content">
        {{> body }}
      </div>
    </div>
  </main>
  <footer class="site-footer" role="contentinfo">
    <div class="container">
      <div class="content">
        {{> footer }}
      </div>
    </div>
  </footer>
  {{> scripts }}
</body>
</html>
